<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quebus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/quebusicon_2"
        android:theme="@style/AppTheme"
        android:label="@string/app_name">
        <activity
            android:name="pfc.quebus.activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="pfc.quebus.activities.GetInfo"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity 
            android:name="pfc.quebus.activities.Settings"
            android:label="Ajustes"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="pfc.quebus.activities.Help"
            android:label="Ayuda"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="pfc.quebus.activities.LineSelected"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="pfc.quebus.activities.NextStop"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
    </application>
    
</manifest>
